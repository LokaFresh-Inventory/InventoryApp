<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingHorizontal="24dp"
    android:paddingBottom="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Below are some example of question you can ask:" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/choice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/theme_green"
        android:text="Bagaimana perkembangan input sayuran selama satu bulan terakhir?"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        android:textColor="@color/white"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Large" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/choice2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/theme_green"
        android:text="Berapa jumlah input Bayam Merah oleh user WH3 pada tanggal 1 Januari 2025?"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        android:textColor="@color/white"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Large" />


</LinearLayout>
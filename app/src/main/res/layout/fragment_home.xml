<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/monthlyLineChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginVertical="16dp"
            android:background="@drawable/rounded_corners_white_background" />

        <ProgressBar
            android:id="@+id/chartProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_no_chart_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/no_chart_data_avalaible"
            android:visibility="gone" />

        <androidx.cardview.widget.CardView
            android:id="@+id/menu_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_chatbot"
                        style="@style/Widget.Material3.Button.IconButton.Filled"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/white"
                        android:contentDescription="@string/button_chatbot"
                        app:cornerRadius="8dp"
                        app:icon="@drawable/baseline_chat_24"
                        app:iconSize="40dp"
                        app:iconTint="@color/theme_green" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/chatbot"
                        android:textColor="@color/dark_green"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_history"
                        style="@style/Widget.Material3.Button.IconButton.Filled"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/white"
                        android:contentDescription="@string/button_history"
                        app:cornerRadius="8dp"
                        app:icon="@drawable/baseline_history_24"
                        app:iconSize="40dp"
                        app:iconTint="@color/theme_green" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/history"
                        android:textColor="@color/dark_green"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_data"
                        style="@style/Widget.Material3.Button.IconButton.Filled"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/white"
                        android:contentDescription="@string/button_data"
                        app:cornerRadius="8dp"
                        app:icon="@drawable/baseline_table_chart_24"
                        app:iconSize="40dp"
                        app:iconTint="@color/theme_green" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/data"
                        android:textColor="@color/dark_green"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>